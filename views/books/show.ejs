<% include ../partials/header %>

<section>
  <div>
    <a href="/books/new">New book</a>
  </div>

  <div class="row">

    <div class="col-sm-6">
      <div class="card">
          <div class="card-body">
            <% if ( book.image ) { %>
              <div class="image">
                <img src="/images/<%= book.image %>" class="img-thumbnail img-fluid">
              </div>
            <% } %>

            <h5 class="card-title">
              <%= book.name %>
            </h5>

            <p>
              <%= book.author %>
            </p>

            <p>
              <%= book.description %>
            </p>

            <p>
              <%= book.price %>
            </p>

            <% if ( book.additionals && book.additionals.length > 0 ) { %>
              <hr>
              <h6>addits</h6>
              <% for( let addit of book.additionals ) { %>
                <p>
                  <%= addit.bookType %>
                </p>
                <p>
                  <%= addit.genre %>
                </p>
              <% } %>
            <% } %>

            <div class="actions">
              <a href="/books/<%= book.id %>/edit" class="btn btn-primary">
                Edit
              </a>

              <form action="/books/<%= book.id %>/delete" method="post"  onsubmit="return confirm('Are you sure you want to delete this book?');">
                <input type="hidden" name="id" genre="<%= book.id %>">
                <button type="submit" class="btn btn-danger">DELETE</button>
              </form>
            </div>
          </div>
        </div>
    </div>

  </div>
</section>

<% include ../partials/footer %>
